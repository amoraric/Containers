{
    "manifest_version": 2,
    "name": "My Tab Organizer",
    "version": "1.0",
    "description": "Organizing my tabs into containers",
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js", "browserAction.js"],
        "persistent": true
    },
    "sidebar_action": {
        "default_panel": "sidebar.html",
        "default_title": "Tab Groups"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "Open Tab Groups"
    }
}
